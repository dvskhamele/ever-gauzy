{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/gauzy/package.json",
          "apps/gauzy/src/**",
          "packages/ui-config/**",
          "packages/ui-core/**",
          "packages/contracts/**",
          "vercel.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/gauzy/server.js"
    }
  ]
}